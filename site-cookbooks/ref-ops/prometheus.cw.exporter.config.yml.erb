region: <%= node['terraform'][node.chef_environment]['modules'][0]['outputs']['primary_aws_region']['value'] -%>

delay_seconds: <%= node['ref-monitoring']['prometheus']['cloudwatch-exporter']['delay_seconds'] -%>

period_seconds: <%= node['ref-monitoring']['prometheus']['cloudwatch-exporter']['period_seconds'] -%>

metrics:
 - aws_namespace: AWS/RDS
   aws_metric_name: FreeStorageSpace
   aws_statistics: [Maximum]
   aws_dimensions: [DBInstanceIdentifier]
   aws_dimensions_select:
     DBInstanceIdentifier: [<%= node['terraform'][node.chef_environment]['modules'][0]['outputs']['ecofactor-oltp-mysql_master_id']['value'] -%>]
